{
	"compilerOptions": {
		"resolveJsonModule": true,
		"target": "ES2017",
		"module": "ESNext",
		"lib": ["DOM"],
		"allowJs": true,
		"declaration": true,
		"downlevelIteration": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"include": ["."]
}
